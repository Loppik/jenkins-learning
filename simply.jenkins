pipeline {
  agent {
    label 'master'
  }
  triggers { pollSCM('* * * * *') }
  stages {
    stage('connect to remote server') {
      steps {
        echo "============= connect to remote server ============="
        sh 'ssh root@192.168.1.9 whoami'
      }
    }
    stage('copy files') {
      steps {
        echo "============= copy files ============="
        dir('/home/katrin/Projects/just_one_html') {
          sh 'ssh root@192.168.1.9 touch me'
        }
      }
    }
    stage('reload server') {
      steps {
        echo "============= reload server ============="
        sh 'ssh root@192.168.1.9 service nginx reload'
      }
    }
  }
}
